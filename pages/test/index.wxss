/* pages/test/index.wxss */
.test-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.test-container .a {
  width: 100%;
  padding: 20rpx;
  background: #dddddd;

  display: flex;
  justify-content: center;
  align-items: center;
  
}

.test-container .a .a-1 {
  color: #333333;
  font-size: 40rpx;
}

.test-container .b {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.test-container .b .b-1 {
  height: 300rpx;
  background-color: orange;
}

.test-container .b .b-2 {
  width: 100%;
  flex: 1;
  border: 1rpx solid #000;
}

.test-container .b .b-2 scroll-view {
  height: 100%;
}

scroll-view text {
  display: block;
}

