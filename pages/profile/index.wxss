/* pages/profile/index.wxss */
.container {
  height: 100vh;
}

.header {
  height: 250rpx;
   background-color: #44A3DB; 
}

.header-assist{
  position: absolute;
  top: 200rpx; 
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
  background-color: #44A3DB;
}

.user-icon {
  position: absolute;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
}

.user-icon image {
  width: 120rpx;
  height: 100%;
  border-radius: 50%;
}

.user-account {
  position: absolute;
  top: 140rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
}

.user-account text {
  color: #444444;
  font-size: 30rpx;
}

.indent-assist,
.other-assist {
  width: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
}

.indent-assist {
   height: 200rpx;
   top: 210rpx;
}

.other-assist {
  top: 430rpx;
}

.indent,
.other {
  width: 95%;
  height: 100%;
  background-color: #ffffff;
}

.indent {
  border-radius: 10rpx;
}

.indent .info {
  padding: 20rpx;
  display: flex;
  border-bottom: 1rpx solid #eeeeee;
  justify-content: space-between;
  font-size: 32rpx;
}

.indent .info .title {
  color: #555555;
}

.indent .info .all-indent {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #888888;  
}

.indent .info .all-indent image {
  width: 30rpx;
  height: 30rpx;
}

.indent .indent-check {
  flex: 1;
  
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.indent-check .item {
  flex: 1;
  height: 100%;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0rpx;
  justify-content: space-between;
}

.indent-check .item image {
  width: 50rpx;
  height: 50rpx;
}

.indent-check .item text {
  color: #888888;
  font-size: 26rpx;
}

.other .item {
  height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 20rpx;
  align-items: center;
}

.other .item .title {
  color: #666666;
  font-size: 34rpx;
}

.other .item image {
  width: 36rpx;
  height: 36rpx;
}

.logout-assist {
  width: 100%;
  position: absolute;
  margin-bottom: 30rpx;
  left: 0;
  bottom: 0;

  display: flex;
  justify-content: center;
  align-items: center;
}

.logout {
  width: 95%;
}








