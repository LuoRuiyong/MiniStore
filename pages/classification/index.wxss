/* pages/classification/index.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.main {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
}

.main .side-nav-bar {
  flex: 1;
  height: 100%;
}

.main .product-area {
  flex: 3;
  height: 100%;
  padding:10rpx 0rpx;
  background-color: #ffffff;
}

.side-nav-bar .item {
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
  color: #333333;
}

.side-nav-bar .selected {
  background-color: #ffffff;
  color: red;
}

.product-area .panel {
  padding: 10rpx 20rpx;
  padding-bottom: 0;
  border-bottom: 1rpx solid #eeeeee;
}

.product-area .panel:first-child {
  margin-top: 0rpx; 
}

.sub-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;

}

.sub-header .title {
  font-size: 34rpx;
  color: #222222;
}

.sub-header .browse-type {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.product-area .sub-table-panel {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.sub-table-panel .item {
  flex: 1;
  height: 280rpx;
  margin: 10rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.sub-table-panel .item .picture {
  display: flex;
  align-items: center;
  justify-content: center;
}

.sub-table-panel .item image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 15%;
  margin: 16rpx;
}


.sub-table-panel .item .desc {
  flex: 1;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sub-table-panel .item .desc text {
  font-size: 26rpx;
  color: #888888;
}

.sub-table-panel .item .price {
  margin: 10rpx 20rpx;
  font-size: 26rpx;
  color: orange;
}

.sub-list-panel .item {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx dashed #eeeeee;
}

.sub-list-panel .item:last-child {
    border-bottom: none;
}

.sub-list-panel .item .picture {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sub-list-panel .item image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 15%;
}

.sub-list-panel .item .info {
  flex: 3;
  display: flex;
  justify-content: center;
  flex-direction: column;
}


.sub-list-panel .item .desc {
  font-size: 30rpx;
  color: #888888;
  margin-bottom: 12rpx;
  padding-right: 10rpx;

}

.sub-list-panel .item .price {
  font-size: 26rpx;
  color: orange;
}












