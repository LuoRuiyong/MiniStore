/**app.wxss**/
@import './templates/common.wxss';

.container {
  height: 100vh;
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f6f6f6;
} 

.test-container {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/* 页脚占位,使用时根据需要设置高度 */
.footer-placeholder {
  width: 100%;
  content: '';
  display: block;
}

.tap-effect {
  background-color: rgba(0, 0, 0, 0.05);
}
